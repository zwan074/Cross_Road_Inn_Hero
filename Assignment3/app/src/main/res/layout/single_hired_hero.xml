<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <Button
        android:id="@+id/enhanceDP"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="DP+0"
        app:layout_constraintBottom_toBottomOf="@+id/HeroInfo"
        app:layout_constraintStart_toEndOf="@+id/HeroInfo" />

    <Button
        android:id="@+id/enhanceAP"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="AP+0"
        app:layout_constraintBottom_toBottomOf="@+id/HeroInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/HeroInfo"
        app:layout_constraintTop_toTopOf="@+id/HeroInfo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/fireHero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="FIRE"
        app:layout_constraintBottom_toBottomOf="@+id/enhanceDP"
        app:layout_constraintStart_toEndOf="@+id/enhanceDP"
        app:layout_constraintTop_toBottomOf="@+id/enhanceAP"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/HeroInfo"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/HeroGIF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/HeroGIF"
        app:layout_constraintTop_toTopOf="@+id/HeroGIF"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/HeroGIF"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="?attr/actionModeSplitBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>
