<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <Button
        android:id="@+id/CompleteNow"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:clickable="false"
        android:text="CompleteNow"
        app:layout_constraintStart_toEndOf="@+id/QuestInfo"
        app:layout_constraintTop_toBottomOf="@+id/Start" />

    <Button
        android:id="@+id/Start"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CompleteNow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompleteNow"
        app:layout_constraintTop_toTopOf="@+id/QuestInfo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/QuestInfo"
        android:layout_width="240dp"
        android:layout_height="170dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/questHero1"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:background="#CCFFEA00"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestInfo"
        app:layout_constraintVertical_bias="0.266" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/questHero2"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:background="#CCFFEA00"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintBottom_toBottomOf="@+id/questHero1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/questHero1"
        app:layout_constraintTop_toTopOf="@+id/questHero1"
        app:layout_constraintVertical_bias="0.0" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/questHero3"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:background="#CCFFEA00"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintBottom_toBottomOf="@+id/questHero2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/questHero2"
        app:layout_constraintTop_toTopOf="@+id/questHero2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ViewTeamStats"
        android:layout_width="106dp"
        android:layout_height="110dp"
        android:text="View Team Stats"
        app:layout_constraintBottom_toBottomOf="@+id/questHero3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Start"
        app:layout_constraintTop_toTopOf="@+id/questHero3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
